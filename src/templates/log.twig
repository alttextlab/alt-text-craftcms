{% set selectedSubnavItem = 'Logs' %}
{% extends "_layouts/cp" %}

{% block content %}
    <style>
        .space-block {
            width: 100%;
            height: 20px;
        }
        .image-size{
            width:75px;
            height:75px;
        }
    </style>

    <h1>Log page</h1>

    {% set thumb = {
        mode: 'crop',
        width: 75,
        height: 75,
        quality: 75,
        position: 'top-center'
    } %}

    <div class="space-block"></div>
    <div class="tableview tablepane">
        <table class="data fullwidth">
            <thead>
            <tr>
                <th style="width:50px;">Id</th>
                <th>Asset</th>
                <th>Message</th>
                <th>Log date</th>
            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.id }}</td>
                    <td>
                        {% if log.assetId %}
                            {% set assetRow = craft.assets.id(log.assetId).one() %}
                            {% if assetRow %}
                                {% if assetRow.canView(currentUser) %}
                                    <a href="{{ assetRow.cpEditUrl }}">
                                        <img src="{{ assetRow.getUrl(thumb) }}" class="image-size"
                                             alt="{{ assetRow.alt }}"/>
                                    </a>
                                {% else %}
                                    <img src="{{ assetRow.getUrl(thumb) }}" class="image-size"
                                         alt="{{ assetRow.alt }}"/>
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    </td>
                    <td>
                        {% if log %}
                            {{ log.logMessage }}
                        {% endif %}
                    </td>
                    <td>
                        {% if log %}
                            {{ log.dateCreated|date('Y-m-d H:i') }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include "alt-text-lab/includes/pagination-panel" %}
    </div>
{% endblock %}